<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane fx:id="containerPane" prefHeight="400" prefWidth="800"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="g3.project.ui.MainController">
    <top>
    <MenuBar fx:id="menuBar">
        <menus>
         <Menu text="File" >
            <items>
               <MenuItem text="New"/>
               <MenuItem text="Open"/>
               <MenuItem text="Save"/>
               <MenuItem text="Save As"/>
               <SeparatorMenuItem  />
               <MenuItem text="Toggle Dark Mode" onAction="#handleToggleDarkModeAction"/>
               <MenuItem text="Exit" onAction="#handleExitAction"/>
            </items>
         </Menu>
         <Menu text="Edit">
            <items>
               <MenuItem text="Copy"/>
               <MenuItem text="Cut"/>
               <MenuItem text="Paste"/>
            </items>
         </Menu>
         <Menu text="Help">
            <items>
               <MenuItem text="Search" disable="true"/>
            </items>
         </Menu>
      </menus>
    </MenuBar>
    </top>
    <center>
        <Label text="Hello">
            <font>
                <Font name="System Bold" size="90.0" />
            </font>
        </Label>
    </center>
</BorderPane>
